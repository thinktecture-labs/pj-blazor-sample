@page "/contributions"
@using RuntimePerformance.Shared.Models

<style>
    .selected {
        background-color: #1E88E5 !important;
    }

        .selected > td {
            color: white !important;
        }

            .selected > td .mud-input {
                color: white !important;
            }
</style>

<MudTable @ref="_mudTable" Items="@_contributions" Hover="true" Breakpoint="Breakpoint.Sm" RowClassFunc="@SelectedRowClassFunc" OnRowClick="RowClickEvent" T="Contribution">
    <HeaderContent>
        <MudTh>Title</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Title">@context.Title</MudTd>
    </RowTemplate>
</MudTable>


